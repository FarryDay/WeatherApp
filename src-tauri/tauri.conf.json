{
	"build": {
		"beforeDevCommand": "yarn dev",
		"beforeBuildCommand": "yarn build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "WeatherApp",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"http": {
				"all": false,
				"request": true,
				"scope": ["http://api.weatherapi.com/v1/*"]
			},
			"shell": {
				"all": false,
				"open": true
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.farryday.dev",
			"icon": [
				"icons/16x16.png",
				"icons/32x32.png",
				"icons/192x192.png",
				"icons/512x512.png",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"transparent": true,
				"decorations": false,
				"fullscreen": false,
				"resizable": true,
				"title": "Weather",
				"width": 600,
				"height": 300
			}
		]
	}
}
